<div class="px-4 mt-6 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900">Requests</h1>
      <p class="mt-2 text-sm text-gray-700">A list of all the users in your account including their name, title, email and role.</p>
    </div>
  </div>
  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Date Submitted</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">User</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Request Type</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Date & Time</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Comments</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
                <%= @requests.each do |request| %>
            
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= request.created_at %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= request.user.first_name %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= request.log_type %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= request.date %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= request.comments %></td>
                <td class="relative whitespace-nowrap space-x-2 py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                  <a href="#" class="text-indigo-600 hover:text-indigo-900">Approve<span class="sr-only">, Lindsay Walton</span></a>
                  <a href="#" class="text-indigo-600 hover:text-indigo-900">Reject<span class="sr-only">, Lindsay Walton</span></a>
                </td>
              </tr>
           

              <!-- More people... -->
               <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
